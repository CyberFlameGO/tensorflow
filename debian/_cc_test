#!/bin/bash
set -ex
# required variables ([*]=must)
# src [*]
# elf [*]
# flags
# libs
# incs
# tflib \in {c, cc, f}, default=f

trap "{ rm -f *.o; }" EXIT

CXX="ccache g++"
XE=xe
_tflib=( -ltensorflow_framework )

if [[ 'c' = $tflib ]]; then
	_tflib+=( -ltensorflow )
elif [[ 'cc' = $tflib ]]; then
	_tflib+=( -ltensorflow_cc )
fi

_CXX() {
$XE -avj0 $CXX -O2 -fPIC $flags -c -I/usr/include/tensorflow $incs -- "${src[@]}"
}

_LD() {
$CXX -fPIE -pie -O2 $flags -Wl,--start-group \
	${_tflib[@]} $libs \
	*.o \
	-Wl,--end-group -o $elf
}

_retry() {
$XE -avj0 $CXX -O2 -fPIC $flags -c -I/usr/include/tensorflow $incs -- tensorflow/core/platform/test_main.cc
$CXX -fPIE -pie -O2 $flags -Wl,--start-group \
	${_tflib[@]} $libs \
	*.o \
	-Wl,--end-group -o $elf
}

_CXX
_LD || _retry

./$elf 

rm *.o
if [[ -z $_CC_NORM ]]; then
	rm $elf
fi
